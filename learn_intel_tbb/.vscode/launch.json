    "version": "0.2.0",
    "configurations": [
        {
            "name": "WSL (gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "/mnt/d/workspace/MyTinyTests/learn_intel_tbb/build/learn_intel_tbb",
            "args": ["-fThreading"],
            "stopAtEntry": false,
            "cwd": "/mnt/d/workspace/MyTinyTests/learn_intel_tbb/build",
            "environment": [],
            "externalConsole": true,
            "windows": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            "pipeTransport": {
                "pipeCwd": "",
                "pipeProgram": "c:\\windows\\sysnative\\bash.exe",
                "pipeArgs": ["-c"],
                "debuggerPath": "/usr/bin/gdb"
            },
            "sourceFileMap": {
                "/mnt/d": "d:\\"
            }
        }
    ]
}